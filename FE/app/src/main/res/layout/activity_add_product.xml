<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.manage_product.AddProductActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#ABE16C">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_back"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/btn_add_product_cancel"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD PRODUCT"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/seymourone_regular"/>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_refresh"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="12dp"
                    android:id="@+id/btn_add_product_reset"/>
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="24sp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"/>

        <EditText
            android:id="@+id/edt_add_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter product name"
            android:fontFamily="@font/montserrat_regular"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price:"
            android:textSize="24sp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"/>

        <EditText
            android:id="@+id/edt_add_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter product price"
            android:fontFamily="@font/montserrat_regular"
            android:inputType="numberDecimal"
            android:imeOptions="actionNext"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textSize="24sp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"/>

        <EditText
            android:id="@+id/edt_add_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter product description"
            android:fontFamily="@font/montserrat_regular"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remaining:"
            android:textSize="24sp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"/>

        <EditText
            android:id="@+id/edt_add_product_remaining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter product remaining"
            android:fontFamily="@font/montserrat_regular"
            android:inputType="numberDecimal"
            android:imeOptions="actionDone"
            android:layout_marginBottom="48dp"/>

        <Button
            android:id="@+id/btn_add_product_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginHorizontal="8dp"
            android:textColor="@color/black"
            android:backgroundTint="#6AFF71"/>
    </LinearLayout>

</LinearLayout>